{
  "testEnvironment": "node",
  "coverageReporters": [
    "clover",
    "lcov",
    "json-summary",
    "text-summary"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/lib/",
    "/__tests__/"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "index.js",
    "cli/**/*.js"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 80
    }
  }
}